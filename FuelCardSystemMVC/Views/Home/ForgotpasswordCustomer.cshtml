@{
    Layout = null;
}
@model FuelCardSystemMVC.Models.LoginModel
@using FuelCardSystemMVC.Library
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Loyalty Portal | Log in</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/plugins/iCheck/square/blue.css" rel="stylesheet" type="text/css" />
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-page bg-teal">

    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Action("Login", "Admin")">Customer Portal</a>
        </div>
        <div class="login-box-body">
            @if (TempData["msg"] != null)
            {
                if ((_AppContext.Messages)TempData["msg"] == _AppContext.Messages.Blocked)
                {
                <div>
                    <div class="alert alert-danger">
                        <p><i class="icon fa fa-warning"></i>You have been blocked, please enter your email to continue.</p>
                    </div>
                </div>
                }
            }
            else
            {
            <p class="login-box-msg">Forgot Password</p>
            }
            @if (ViewBag.msg == _AppContext.Messages.Success)
            {
                <div>
                    <div class="alert alert-success">
                        <p><i class="icon fa fa-check"></i>Your password has sent to your email id.</p>
                    </div>
                </div>
            }
            @if (ViewBag.msg == _AppContext.Messages.EmailNotExist)
            {
                <div>
                    <div class="alert alert-danger">
                        <p><i class="icon fa fa-warning"></i>Invalid user id</p>
                    </div>
                </div>
            }
            @using (Html.BeginForm("ForgotpasswordCustomer", "Home", new { }, FormMethod.Post, new { @class = "signin-wrapper", @id = "LoginForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Enter your Email", @type = "email" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Send</button>
                    </div>
                    <!-- /.col -->
                </div>
            }
            <a href="@Url.Action("Login", "Customer")">Back to login page</a><br>
        </div>
    </div>


    <script src="~/Content/plugins/jQuery/jQuery-2.1.3.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $(".alert").delay(10000).fadeOut(1000);
        });
    </script>
</body>
</html>