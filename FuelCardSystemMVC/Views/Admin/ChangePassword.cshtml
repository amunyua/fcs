@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model FuelCardSystemMVC.Models.LocalPasswordModel
@using FuelCardSystemMVC.Library

    @section header{
        <section class="content-header">
            <h1><i class="fa fa-calculator"></i><span class="margin">Change your password</span><small></small></h1>
           
        </section>
    }
    <div class="row">
        @if (ViewBag != null)
        {
            if (ViewBag.msg == _AppContext.Messages.PasswordChanged)
            {
            <div class="col-sm-12">
                <div class="alert alert-success">
                    <h4><i class="icon fa fa-check"></i>Successfully changed.</h4>
                </div>
            </div>
            }
            if (ViewBag.msg == _AppContext.Messages.InvalidPassword)
            {
            <div class="col-sm-12">
                <div class="alert alert-danger">
                    <h4><i class="icon fa fa-ban"></i>Invalid Password</h4>
                </div>
            </div>
            }
        }
        <div class="col-sm-12">
            <div class="box box-solid box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Change password</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>@* /.box-tools *@
                </div>@* /.box-header *@
                <div class="overlay" style="display: none">
                    <i class="fa fa-refresh fa-spin"></i>
                </div>
                @* form start *@
                @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post, new { @id = "ChangePasswordForm", @role = "form" }))
                {
                    <div class="box-body">
                        <div class="form-group">
                            <label for="">Old Password</label>
                            @Html.TextBoxFor(x => x.OldPassword, new { @placeholder = "Old Password", @class = "form-control", @maxlength = 15, @type="password" })
                        </div>
                        <div class="form-group">
                            <label for="">New Password</label>
                            @Html.TextBoxFor(x => x.NewPassword, new { @placeholder = "New Password", @class = "form-control", @maxlength = 15, @type="password" })
                        </div>
                        <div class="form-group">
                            <label for="">Confirm Password</label>
                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @placeholder = "Confirm Password", @class = "form-control", @maxlength = 15, @type="password" })
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Change Password" class="btn btn-primary col-md-2 col-md-offset-5" onclick="DisableButton(this);" ondblclick="DisableButton(this);">
                        </div>
                        <div class="clearfix"></div>
                    </div>@* /.box-body *@
                }
            </div>
        </div>
    </div>
    @section scripts{
        <script type="text/javascript">
            $(document).ready(function () {
                ChangePasswordFormLoad();
                $(".alert").delay(2000).fadeOut(1000);
            });
        </script>
    }
