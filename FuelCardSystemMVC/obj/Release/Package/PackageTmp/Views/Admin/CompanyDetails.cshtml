@{
    ViewBag.Title = "CompanyDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model FuelCardSystemEntities.Models.Company
@using FuelCardSystemMVC.Library
@if (_AppContext.HasPermission(Parameters.Can_Update_Company))
{
    @section header{
        <section class="content-header">
            <h1><i class="fa fa-cogs"></i><span>Company Details...</span><small></small></h1>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard"></i>Home</a></li>
                <li class="active">Company Details</li>
            </ol>
        </section>
    }
    <div class="row">
        @if (ViewBag.msg != null)
        {
            if (ViewBag.msg == _AppContext.Messages.Success)
            {
            <div class="col-sm-12">
                <div class="alert alert-success">
                    <h4><i class="icon fa fa-check"></i>Successfully saved.</h4>
                </div>
            </div>
            }
            else if (ViewBag.msg == _AppContext.Messages.Error)
            {
            <div class="col-sm-12">
                <div class="alert alert-danger">
                    <h4><i class="icon fa fa-ban"></i>Error.</h4>
                </div>
            </div>
            }
        }
        <div class="col-md-12">
            <div class="box box-solid box-info">
                <div class="box-header">
                    <h3 class="box-title">Company Details</h3>
                </div>
                @* /.box-header *@
                <div class="overlay" style="display: none">
                    <i class="fa fa-refresh fa-spin"></i>
                </div>
                @* form start *@
                @using (Html.BeginForm("CompanyDetails", "Admin", FormMethod.Post, new { @id = "CompanyDetailsForm", @role = "form" }))
                {
                    <div class="box-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="">Company Name</label>
                                    @Html.TextBoxFor(x => x.Company_Name, new { @placeholder = "Company Name", @class = "form-control", @maxlength = "50" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="">Postal Address</label>
                                    @Html.TextAreaFor(x => x.Company_PostalAddress, new { @placeholder = "Postal Address", @class = "form-control", @maxlength = "500" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="">Postal Code</label>
                                    @Html.TextBoxFor(x => x.Company_PostalCode, new { @placeholder = "Postal Code", @class = "form-control", @maxlength = "50" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="">City</label>
                                    @Html.TextBoxFor(x => x.Company_City, new { @placeholder = "City", @class = "form-control", @maxlength = "50" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="">Country</label>
                                    @Html.DropDownListFor(x => x.Company_Country, (SelectList)ViewBag.Countries, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="">Contact Number-1</label>
                                    @Html.TextBoxFor(x => x.Company_Phone1, new { @placeholder = "Phone number", @class = "form-control", @maxlength = "50" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="">Contact Number-2</label>
                                    @Html.TextBoxFor(x => x.Company_Phone2, new { @placeholder = "Phone number", @class = "form-control", @maxlength = "50" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="">Company Email</label>
                                    @Html.TextBoxFor(x => x.Company_Email, new { @placeholder = "Company Email", @class = "form-control", @maxlength = "50" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="">PIN Number</label>
                                    @Html.TextBoxFor(x => x.Company_PIN, new { @placeholder = "PIN Number", @class = "form-control", @maxlength = "50" })
                                </div>
                            </div>
                        </div>
                        @foreach (var item in (IEnumerable<FuelCardSystemEntities.Models.CustomTableFields>)ViewBag.tables)
                        {
                            if (item.CustomFieldId.Equals("CF1"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF1, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                            else if (item.CustomFieldId.Equals("CF2"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF2, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                            else if (item.CustomFieldId.Equals("CF3"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF3, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                            else if (item.CustomFieldId.Equals("CF4"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF4, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                            else if (item.CustomFieldId.Equals("CF5"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF5, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                            else if (item.CustomFieldId.Equals("CF6"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF6, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                            else if (item.CustomFieldId.Equals("CF7"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF7, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                            else if (item.CustomFieldId.Equals("CF8"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF8, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                            else if (item.CustomFieldId.Equals("CF9"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF9, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                            else if (item.CustomFieldId.Equals("CF10"))
                            {
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="">@item.CustomFieldName</label>
                                        @Html.TextBoxFor(x => x.CF10, new { @placeholder = @item.CustomFieldName, @class = "form-control", @maxlength = 50 })
                                    </div>
                                </div>
                            </div>
                            }
                        }
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary col-md-2 col-md-offset-5" onclick="DisableButton(this);" ondblclick="DisableButton(this);">Save</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>@* /.box-body *@
                }
            </div>
        </div>
    </div>
    @section scripts{
        <script src="~/Content/plugins/input-mask/jquery.inputmask.js" type="text/javascript"></script>
        <script src="~/Content/plugins/input-mask/jquery.inputmask.extensions.js" type="text/javascript"></script>
        <script src="~/Content/plugins/input-mask/jquery.inputmask.phone.extensions.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                CompanyDetailsFormLoad();
                $("#Company_Phone1, #Company_Phone2").inputmask("phone", {
                    url: "/Content/plugins/input-mask/phone-codes/phone-codes.json",
                    onKeyValidation: function () { //show some metadata in the console
                        $("#Company_Country").val($(this).inputmask("getmetadata")["name_en"]);
                    }
                });
                $("#idCompanydetails").closest("li.treeview").addClass("active");
                $("#idCompanydetails").closest("li").addClass("active");
                $(".alert").delay(2000).fadeOut(1000);
            });
        </script>
    }
}
else
{
    <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        <h4><i class="icon fa fa-ban"></i>Unauthorized Access!</h4>
        You have no permission to do this action.    
    </div>
}
